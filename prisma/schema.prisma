generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // used by your app at runtime
  directUrl = env("DIRECT_URL")    // used only for prisma migrate
}


model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String
  role      String     @default("customer") // "admin" or "customer"
  orders    Order[]
  cartItems CartItem[]
}

model Product {
  id          String     @id @default(cuid())
  name        String
  description String
  price       Int
  stock       Int
  imageUrl    String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  cartItems   CartItem[]
}

model CartItem {
  id        String   @id @default(cuid())
  quantity  Int
  userId    String
  productId String
  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}

model Order {
  id        String   @id @default(cuid())
  userId    String
  total     Float
  status    String   @default("pending")
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
